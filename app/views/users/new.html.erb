
    <%= form_with model: @user do |f| %>

        <%if @user.errors.any? %>
            <div class="bg-danger bg-gradient text-white mb-3 p-3 mt-4">
                opps!! parece que algo salio mal
            </div>
        <% end %>




        <div class="for-group">
            <%= f.label :name ,  class: "label-control"%>

            <%= f.text_field :name ,class: "form-control" %>

            
            <% @user.errors.full_messages_for(:name).each do |message| %>
                
                <div class="mt-3 mb-3 text-danger ">*<%= message %></div>

            <% end %>
            
        </div>
   
        <div class="form-group">
            <%= f.label :email,  class: "label-control" %>
            <%= f.email_field  :email, class: "form-control" %>

           <% @user.errors.full_messages_for(:email).each do |message| %>
                
                 <div class="mt-3 mb-3 text-danger ">*<%= message %></div>

            <% end %>

        </div>

        <div class="form-group">
            <%= f.label :password  ,class: "label-control"%>
            <%= f.password_field :password  ,class: "form-control" %>

            <% @user.errors.full_messages_for(:password).each do |message| %>
                
                  <div class="mt-3 mb-3 text-danger ">*<%= message %></div>

            <% end %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, class: "label-control" %>
            <%= f.password_field :password_confirmation  ,class: "form-control" %>

            
        </div>
        <%= f.submit class:'btn bg-dark bg-gradient mt-4 text-white' %>
    <% end %>


